<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.note"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.note.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.note.NewPage"
            android:label="@string/title_activity_new_page"
            android:parentActivityName="com.example.note.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.note.MainActivity" />
        </activity>
        <activity
            android:name="com.example.note.ShowPage"
            android:label="@string/title_activity_show_page"
            android:parentActivityName="com.example.note.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.note.MainActivity" />
        </activity>
        <activity
            android:name="com.example.note.EditPage"
            android:label="@string/title_activity_edit_page"
            android:parentActivityName="com.example.note.ShowPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.note.ShowPage" />
        </activity>
        <activity
            android:name="com.example.note.AddItem"
            android:label="@string/title_activity_add_item"
            android:parentActivityName="com.example.note.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.note.MainActivity" />
        </activity>
    </application>

</manifest>
